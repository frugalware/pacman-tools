# movepkg (aka installpkg) for pacman
# distributed under GPL License

version=0.8

if ! [ -e *fpm ]; then
	echo "No package in this directory!"
elif [ `ls *.fpm|wc|tr -s ' '|cut -d ' ' -f 3` == 1 ]; then
	pkgname=`cat FrugalBuild |grep pkgname|sed -n '1 p'|cut -d = -f 2`
	oldpkg=`cd ../../../frugalware/;ls |grep "^$pkgname-[[:digit:]]"|grep fpm`
	if ! [ -z "$oldpkg" ]; then
		cmda="rm -f ../../../frugalware/$oldpkg"
		echo "$cmda"
		$cmda
	fi
	cmdb="mv `ls *fpm` ../../../frugalware/"
	echo "$cmdb"
	$cmdb
else
	echo "More than one package in this directory!"
fi

